<div class="tab-pane fade" id="show-activity" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/add-activity" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name Activity</label>
              <input required type="text" class="form-control" name="name" placeholder="Enter name activity">
            </div>
            <div class="form-group">
              <label for="name">Type</label>
              <input required type="text" class="form-control" name="type" placeholder="Enter type">
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input required type="file" class="form-control" name="image">
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId">
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < activity.length; i++){ %>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <%= activity[i].name %>
                    </td>
                    <td>
                      <%= activity[i].type %>
                    </td>
                    <td>
                      <img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="imageUrl" width="80px"
                        style="object-fit: cover;">
                    </td>
                    <td>
                      <form action="/admin/delete-activity/<%= itemId %>/<%= activity[i].id %>?_method=DELETE"
                        method="POST">
                        <a href="javascript:void()" type="button" class="btn btn-warning button-update-activity"
                          data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>"
                          data-type="<%= activity[i].type %>"><i class="fas fa-edit"></i></a>
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>