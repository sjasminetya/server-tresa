<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="nav-home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/add-feature" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name Feature</label>
              <input required type="text" class="form-control" name="name" placeholder="Enter name feature">
            </div>
            <div class="form-group">
              <label for="name">Qty</label>
              <input required type="number" class="form-control" name="qty" placeholder="Enter qty">
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input required type="file" class="form-control" name="image">
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId">
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i < feature.length; i++){ %>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <%= feature[i].name %>
                    </td>
                    <td>
                      <%= feature[i].qty %>
                    </td>
                    <td>
                      <img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="imageUrl" width="80px"
                        style="object-fit: cover;">
                    </td>
                    <td>
                      <form action="/admin/delete-feature/<%= itemId %>/<%= feature[i].id %>?_method=DELETE"
                        method="POST">
                        <a href="javascript:void()" type="button" class="btn btn-warning button-update"
                          data-id="<%= feature[i].id %>" data-name="<%= feature[i].name %>"
                          data-qty="<%= feature[i].qty %>"><i class="fas fa-edit"></i></a>
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>